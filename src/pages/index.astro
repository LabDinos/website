---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Content from "../components/Content.astro";
import Hero from "../components/Hero.astro";

import logo from "../assets/logo.svg?url";
---

<Layout
    title="LabDinos"
    description="LabDinos: A Roblox games studio creating imaginative and wonderful experiences."
>
    <Header />
    <Hero height="hero">
        <div class="w-full flex gap-8 flex-row items-center justify-center">
            <div
                class="w-full flex flex-col gap-8 items-start justify-center md:items-start"
            >
                <img
                    src={logo}
                    alt="LabDinos"
                    class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24"
                />
                <div class="flex flex-col gap-4">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold">
                        We are Lab Dinos!
                    </h1>
                    <p class="md:text-lg">
                        We are a Roblox games studio creating imaginative and
                        wonderful experiences.
                    </p>
                </div>
                <a
                    href="#projects"
                    class="w-max cursor-pointer text-lg font-medium px-4 py-2 rounded-full bg-emerald-700/60 hover:bg-emerald-700/80 active:bg-emerald-700 transition-colors"
                    >See our work</a
                >
            </div>
            <div class="hidden md:flex flex-grow"></div>
        </div>
    </Hero>
    <Content>
        <h1 class="text-4xl font-bold">Hello, world!</h1>
        <p class="">Hi.</p>
    </Content>
</Layout>
