---
import logo from "../assets/logo.svg?url";
const links = [
    {
        name: "Projects",
        url: "/#projects",
    },
    {
        name: "Team",
        url: "/#team",
    },
    {
        name: "Contact",
        url: "/#contact",
    },
];
---

<header
    class="w-full backdrop-filter flex items-center justify-center fixed top-0 md:top-4 z-50 md:px-4"
>
    <nav
        class="flex items-center justify-between w-full px-2 py-2 bg-zinc-800/40 backdrop-blur-lg md:max-w-7xl border-b md:border md:rounded-full border-zinc-800"
    >
        <a
            href="/"
            class="cursor-pointer flex items-center justify-center gap-2 px-4 py-2 rounded-full hover:bg-zinc-700/80 active:bg-zinc-700 transition-colors"
        >
            <img src={logo} alt="LabDinos" class="w-8 h-8" />
            <h2 class="text-xl font-bold h-max">LabDinos</h2>
        </a>
        <div class="hidden md:flex items-center gap-4 h-full">
            {
                links.map((link) => (
                    <a
                        href={link.url}
                        class="cursor-pointer text-lg font-medium px-4 py-2 h-full rounded-full hover:bg-zinc-700/60 active:bg-zinc-700/80 transition-colors"
                    >
                        {link.name}
                    </a>
                ))
            }
        </div>
    </nav>
</header>
