---
const LINKS = [
    {
        name: "GitHub",
        url: "/github",
    },
    {
        name: "Roblox",
        url: "/roblox",
    },
    {
        name: "Discord",
        url: "/discord",
    },
];
---

<div class="w-full bg-zinc-950 flex justify-center p-8 md:p-16">
    <div
        class="max-w-5xl w-full flex flex-col gap-8 items-center justify-center md:items-start"
    >
        <div class="flex flex-row gap-4 justify-center">
            {
                LINKS.map((link, i) => (
                    <>
                        <a
                            href={link.url}
                            class="text-zinc-400 hover:text-zinc-200 transition-colors"
                        >
                            {link.name}
                        </a>
                        {i < LINKS.length - 1 && (
                            <span class="text-zinc-400">|</span>
                        )}
                    </>
                ))
            }
        </div>
        <div class="w-full flex flex-row gap-4">
            <p class="text-sm text-zinc-400">
                &copy; {new Date().getFullYear()} LabDinos. All rights reserved.
            </p>
            <div class="flex-grow"></div>
            <a
                href="/legal/privacy-policy"
                class="text-zinc-400 hover:text-zinc-200 transition-colors"
            >
                Privacy Policy
            </a>
        </div>
    </div>
</div>
